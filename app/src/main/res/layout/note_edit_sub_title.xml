<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4DF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Enter a new Subtitle"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/new_subtitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundshape_edit_content_single"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/new_subtitle_submit"
        android:padding="10dp"
        android:text="Submit"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/button_in_personal_notes"
        android:layout_gravity="right"
        android:layout_height="wrap_content" />

</LinearLayout>
